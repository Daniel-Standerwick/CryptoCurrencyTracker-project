<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsAboutACrypto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Name"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/MenuButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/MenuButton"
            android:layout_width="144dp"
            android:layout_height="84dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="16dp"
            android:text="BackToMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="44dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/high24h"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="132dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/currentPrice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ath"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="132dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/high24h"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/athdate"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/low24h"
            app:layout_constraintTop_toBottomOf="@+id/ath" />

        <TextView
            android:id="@+id/roi"
            android:layout_width="298dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/priceChange24h"
            app:layout_constraintTop_toBottomOf="@+id/athdate" />

        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/totalSupply"
            app:layout_constraintTop_toBottomOf="@+id/roi" />

        <TextView
            android:id="@+id/low24h"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/marketCap"
            app:layout_constraintTop_toBottomOf="@+id/high24h" />

        <TextView
            android:id="@+id/priceChange24h"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/marketCapRank"
            app:layout_constraintTop_toBottomOf="@+id/low24h" />

        <TextView
            android:id="@+id/totalSupply"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/marketCapChange24h"
            app:layout_constraintTop_toBottomOf="@+id/priceChange24h" />

        <TextView
            android:id="@+id/marketCap"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentPrice" />

        <TextView
            android:id="@+id/marketCapRank"
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marketCap" />

        <TextView
            android:id="@+id/marketCapChange24h"
            android:layout_width="136dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marketCapRank" />


    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>